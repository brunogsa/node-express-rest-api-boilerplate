{
  "name": "node-express-rest-api-boilerplate",
  "version": "1.0.0",
  "main": "src",
  "scripts": {
    "start": "nodemon . | bunyan -o short",
    "test": "cross-env npm run lint && npm run test:all",
    "lint": "eslint ./src/**/**.js ./tests/api/*.js ./tests/unit/**/*.js",
    "test:all": "nyc mocha --require babel-core/register tests/unit/**/*.js tests/api/index.js",
    "test:unit": "nyc mocha --require babel-core/register tests/unit/**/*.js",
    "test:api": "nyc mocha --require babel-core/register tests/api/index.js",
    "report:coverage": "opn coverage/index.html"
  },
  "author": "Bruno Agostini <brunogsa.92@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "axios": "^0.17.1",
    "babel-core": "^6.26.0",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-stage-1": "^6.24.1",
    "babel-runtime": "^6.26.0",
    "bluebird": "^3.5.1",
    "body-parser": "^1.18.2",
    "bodymen": "^1.0.3",
    "bunyan": "^1.8.12",
    "compression": "^1.7.1",
    "cors": "^2.8.4",
    "dotenv-safe": "^4.0.4",
    "express": "^4.16.2",
    "express-force-ssl": "^0.3.2",
    "express-request-id": "^1.4.0",
    "uuid": "^3.1.0"
  },
  "devDependencies": {
    "babel-eslint": "^8.0.1",
    "chai": "^4.1.2",
    "cross-env": "^5.0.5",
    "eslint": "^4.4.1",
    "eslint-config-standard": "^10.2.1",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-node": "^5.2.1",
    "eslint-plugin-promise": "^3.0.0",
    "eslint-plugin-standard": "^3.0.1",
    "mocha": "^5.0.0",
    "nodemon": "^1.10.2",
    "nyc": "^11.4.1",
    "opn-cli": "^3.1.0",
    "supertest": "^3.0.0"
  }
}
